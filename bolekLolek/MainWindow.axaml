<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="bolekLolek.MainWindow"
        Title="bolekLolek">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Lewy panel: formularz dodawania zadania -->
            <StackPanel Grid.Column="0" Grid.Row="0" Margin="10" VerticalAlignment="Top" Spacing="10">
                <TextBlock Text="Wpisz zadanie:"/>
                <TextBox x:Name="taskTextBox" Width="200" Height="25"/>

                <TextBlock Text="Wybierz osobę:"/>
                <ComboBox x:Name="personComboBox" Width="200" SelectionChanged="PersonComboBox_OnSelectionChanged">
                    <ComboBoxItem Content="Bolek"/>
                    <ComboBoxItem Content="Lolek"/>
                </ComboBox>
                <Image x:Name="personImage" Width="150" Height="150" Margin="0,10"/>

                <TextBlock Text="Poziom trudności:"/>
                <StackPanel Orientation="Vertical">
                    <RadioButton GroupName="difficultyLevel" x:Name="easyRadioButton" Content="łatwy"/>
                    <RadioButton GroupName="difficultyLevel" x:Name="mediumRadioButton" Content="średni"/>
                    <RadioButton GroupName="difficultyLevel" x:Name="hardRadioButton" Content="trudny"/>
                </StackPanel>

                <TextBlock Text="Wymagania dodatkowe:"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="outsideCheckBox" Content="na dworze"/>
                    <CheckBox x:Name="toolsCheckBox" Content="potrzebne narzędzia"/>
                    <CheckBox x:Name="friendsCheckBox" Content="potrzebna darmowa siła robocza"/>
                </StackPanel>

                <TextBlock Text="Data zadania:"/>
                <CalendarDatePicker x:Name="dateCalendarDatePicker" Width="200"/>

                <Button x:Name="addButton" Content="Dodaj zadanie" Width="200" Click="AddButton_OnClick"/>
            </StackPanel>

            <!-- Prawy panel: lista zadań i akcje -->
            <StackPanel Grid.Column="1" Grid.Row="0" Margin="10" VerticalAlignment="Top" Spacing="10">
                <TextBlock Text="Lista zadań:" FontWeight="Bold"/>
                <ListBox x:Name="taskListBox" Height="300" SelectionMode="Single"/>
                
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button x:Name="deleteButton" Content="Usuń zadanie" Click="DeleteButton_OnClick"/>
                    <Button x:Name="summaryButton" Content="Zobacz dzisiejsze zadania" Click="SummaryButton_OnClick"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
